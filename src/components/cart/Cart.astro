---
import { CartProduct } from "./CartProduct";
import { TotalCart } from "./TotalCart";

---



<section class="h-screen w-[400px] bg-[#181818] absolute top-[56px] right-0 z-30 translate-x-[400px] transition-transform duration-300 p-1 overflow-hidden"  id="cart" transition:persist >
    <div
        class="flex flex-col gap-2 pb-16 p-1 min-h-[70vh]  max-h-[70vh] overflow-y-scroll justify-between"
       id="content_product_cart"
      >
    <CartProduct client:load />
    </div>
    <TotalCart client:load/>
</section>

<style>

    
#content_product_cart::-webkit-scrollbar{
    background-color: transparent;
    width: 10px;
}
#content_product_cart::-webkit-scrollbar-thumb{
    background-color: #A100ED;
    border-radius: 20px;
    width: 10px;
   
}
</style>

