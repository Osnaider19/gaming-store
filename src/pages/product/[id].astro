---
import Layout from '../../layouts/Layout.astro'
import { products } from '../../data/product';
const { id } = Astro.params 
const idParams = parseInt(id);
const producto = products.find((product) =>  idParams === product.id)
---


<Layout title='producto'>
    <div class="w-full px-3 py-4">
        <article class="flex gap-x-4">
            <div class="w-[250px] h-[250px] bg-[#ffffff20] rounded-md px-4"> 
                <img src={producto?.imagen} alt="" class="w-full h-full object-contain" transition:name={`imagen producto ${id}`}>
            </div>
            <div class="flex justify-center items-center">
                <div>
                    <p class="text-5xl font-semibold capitalize" transition:name={`text producto ${id}`}>{producto?.name}</p>
                   <p class="py-3 text-2xl">${producto?.price}</p>
                </div>
            </div>
        </article>
        <section>
        <h2 class="py-3 font-semibold text-3xl">Description</h2>
           <p class="text-left text-xl">{producto?.description}</p>
        </section>
    </div>
</Layout>